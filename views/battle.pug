doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="css/custom.css")
        script(src="https://kit.fontawesome.com/26f2ca732d.js" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/pixi.js/5.1.3/pixi.min.js")
        title TentBot Battle System
    body         
        div.container.py4
            header.pb-3.mb-4.pt-3
                a(href="/").main-title Tent Bot
            div.p-4.mb-5.bg-dark.rounded.battle_header
                h3
                    span.player_name=`${challenger.user_name}`
                    span.vs=` vs `
                    span.player_name=`${challenged.user_name}`
                div.row
                    div.col
                        div#battle_canvas
                div.row
                    div.col.text-center
                        div.action_bar
                            button.btn.btn-danger.btn-lg.battle_button(type="button")
                                span=`End Turn`
                            button.btn.btn-primary.btn-lg.battle_button(type="button")
                                span=`Attack`
                            button.btn.btn-success.btn-lg.battle_button(type="button")
                                span=`Fortify`                        
                            button.btn.btn-warning.btn-lg.battle_button(type="button")
                                span=`Use Ability`
    script(src="js/battle.js")
