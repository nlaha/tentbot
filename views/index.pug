doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="css/custom.css")
        title TentBot Battle System
    body         
        div.container.py4
            header.pb-3.mb-4.pt-3
                h1.main-title Tent Bot
            div.p-4.mb-5.bg-dark.rounded
                h4 Recent Discoveries
                ul
                each val in item_db.length ? item_db : ['No items have been discovered!']
                    li.mb-3
                        div.card
                            div.card-header
                                a.item-title(href=`${val['url']}`)=`[${val.level}][${val.prefix}] ${val.name}`  
                            div.row.g-0
                                div.col-2.ml-4.mt-4.mb-5
                                    img.thumbnail.rounded.m-2(src=val.thumbnail, alt=val.name)
                                    div.btn-group.m-2
                                        button.btn.btn-primary Enchant
                                        button.btn.btn-secondary Curse
                                div.col.md-8
                                    div.card-body
                                        h5 Powers:
                                        each power in val.powers
                                            div.chip.m-2
                                                p=power
                                        h5 Stats:
                                        p.chip.m-2=`Attack ${val.attack}(${val.attack * val.level})`
                                        p.chip.m-2=`Defense ${val.defense}(${val.defense * val.level})`
                                        p.chip.m-2=`Health ${val.health}(${val.health * val.level})`
                                        h6.mt-4=val.date_discovered ? `Date Discovered: ${val.date_discovered.toDateString()}` : 'Date Discovered: Unknown'
                                        h6.mt-4=val.native_server ? `Native Server: ${val.native_server}` : 'Native Server: Unknown'